#include<iostream>

int main()
{
	setlocale(LC_ALL, "Russian");// подключили русские слова для текста
	int a, b, c;
	std::cout << "Введите первое число:" << std::endl;
	std::cin >> a;
	std::cout << "Введите второе число:" << std::endl;
	std::cin >> b;
	c = a + b;
	std::cout << "сумма = " << c << std::endl;
	return 0;
}
