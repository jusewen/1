	std::cin >> n;// запрос номера валюты
	switch (n)
	{
	case(1):
		std::cout << "Доллар США (обозначают знаком $ или USD) – национальная валюта Соединенных Штатов Америки. Один доллар равен 100 центам.\n Помимо Соединенных Штатов Америки доллар США служит законным средством платежа в независимых государствах Восточный Тимор, Либерия, Маршалловы Острова, Палау, Панама, Сальвадор, Федеральные Штаты Микронезии, Эквадор.Также доллар США официально находится в обращении зависимых территорий - Американские Виргинские острова, Американское(Восточное) Самоа, Гуам, Пуэрто - Рико, Северные Марианские острова(принадлежат США), Бермудские Острова, Британские Виргинские острова, Тёркс и Кайкос(Великобритания).\n"; break;
	case(2):
		std::cout << "Евро (обозначают знаком €,или EUR) – официальная единая валюта Евросоюза. Один евро равен 100 центам (используется также название «евроценты»).\n Евро используют 17 стран - членов Европейского Союза, образующих «зону евро»(Австрия, Бельгия, Германия, Греция, Ирландия, Испания, Италия, Кипр, Люксембург, Мальта, Нидерланды, Португалия, Словакия, Словения, Финляндия, Франция, Эстония).\n"; break;
